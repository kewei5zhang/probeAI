{
  "manifest_version": 3,
  "name": "Trading AI Assistant",
  "version": "3.0",
  "description": "AI-powered trading analysis from TradingView screenshots",
  "permissions": [
    "activeTab",
    "tabs", 
    "storage",
    "scripting",
    "tabCapture"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.openai.com/*",
    "https://api.x.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://tradingview.com/*", "https://*.tradingview.com/*"],
      "js": [
        "content.js"
      ],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_title": "Trading AI Assistant"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 